---
export interface Props {
  number: number;
  title: string;
}

const { number, title } = Astro.props;
---

<div class="relative mb-8 flex gap-4">
  <div class="absolute -left-[1.3rem] top-0 z-10">
    <div class="w-10 h-10 rounded-full bg-red-600 text-white flex items-center justify-center font-bold text-base shadow-lg shadow-red-600/30">
      {number}
    </div>
  </div>
  <div class="flex-1 ml-4">
    <h3 class="text-lg font-semibold text-white mb-3 leading-10">{title}</h3>
    <div class="text-zinc-300 leading-relaxed">
      <slot />
    </div>
  </div>
</div>
