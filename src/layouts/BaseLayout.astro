---
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Membercat Studios', description = 'Documentation for Membercat Studios - Minecraft content studio creating plugins, mods, modpacks, and resource packs' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href="/small_membercat.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/fa/css/all.min.css" />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <footer class="border-t border-zinc-900 py-12 bg-black">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-center gap-4">
          <p class="text-zinc-500 text-sm">
            Â© {new Date().getFullYear()} Membercat Studios. All rights reserved.
          </p>
          <div class="flex items-center gap-6">
            <a href="/docs/getting-started" class="text-zinc-500 hover:text-white text-sm transition-colors">
              Documentation
            </a>
            <a href="https://membercat.com" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-white text-sm transition-colors">
              Modrinth
            </a>
            <a href="https://github.com/Membercat-Studios" target="_blank" rel="noopener noreferrer" class="text-zinc-500 hover:text-white text-sm transition-colors">
              GitHub
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>

